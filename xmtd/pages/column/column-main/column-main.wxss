/*轮播图 start */
.swiper{
  height: 290rpx;
  margin: 0 20rpx;
}
.swiper image{
  width: 100%;
  height: 290rpx;
}
/*轮播图 end */
/*广告 start  */
.ad{
  margin: 40rpx;
  border: 1px solid #000;
  height: 230rpx;
}
/*广告 end  */
/*内容 start  */
.content{
  margin: 20rpx;
  margin-bottom: 200rpx;
}
.content-first{
  margin-bottom: 20rpx;
}
.content-img{
  height: 480rpx;
  width: 100%;
  overflow: hidden;
  border-radius: 30rpx;
}
.content-text{
  background: #000;
  color: #fff;
  margin-top: -112rpx;
  width: 100%;
  opacity: 0.5;
  height: 100rpx;
  border-radius: 30rpx;
  
}
.text{
  margin-left: 20rpx;
}
/*内容 end  */
/*刷新按钮start  */
.refresh{
  position: fixed;
  bottom: 0;
  right: 0;
  margin-right: 22rpx;
  margin-bottom: 120rpx;
}
.refresh-bgc{
  background-color: #DDDEE2;
  border-radius: 50%;
  width: 80rpx;
  height: 75rpx;
  opacity: 0.5;
}
.refresh-img{
  width: 80rpx;
  height: 75rpx;
}
/*刷新按钮end */
/*固定选项卡 start  */
.tarbar{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #B5B5B7;
  background-color: #F5F5F8;
}
.left, .right{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 4rpx;
}
.left-img image, .right-img image{
  margin-top: 4rpx;
  width: 50rpx;
  height: 50rpx;
}
.left-text, .right-text{
  font-size: 24rpx;
}
.left{
  margin-left: 160rpx;
}
.right{
  margin-left: 300rpx;
}
.left-text{
 color: #BC2924;
}
/*固定选项卡 end  */