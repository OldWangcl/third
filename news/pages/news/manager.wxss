.containers{
  width: 18rem;
  margin: 10px auto;
  font-size: 32rpx;
}
.manage{
  margin-bottom: 70rpx;
}
.manage_hd{
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 4rpx solid #d81e06;
}
.manage_title{
  font-weight: 500;
}
.manage_tips{
  font-weight: 300;
  font-size: 22rpx;
  padding: 0 10rpx;
  float: right;
}
.manage_bd{
  padding-top: 20rpx;
}
.manage_tag{
  padding: 10rpx 20rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  color: #ccc;
  font-size: 24rpx;
  display: inline-block;
  margin: 10rpx 16rpx;
}
.active{
  color: #d81e06;
  border-color: #d81e06;
}
.btn_control{
  padding: 10px;
  width: 99%;
}
.btn_control_mini{
  margin-bottom: 20rpx;
  font-size: 26rpx;
}